{
  "name": "stripe-replit-sync",
  "version": "1.0.0",
  "private": false,
  "description": "Stripe Sync Engine to sync Stripe data to Postgres",
  "type": "module",
  "main": "./dist/index.cjs",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsup src/index.ts --format esm,cjs --dts --shims && cp -r src/database/migrations dist/migrations",
    "lint": "eslint src --ext .ts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "pg": "^8.16.3",
    "pg-node-migrations": "0.0.8",
    "ws": "^8.18.0",
    "yesql": "^7.0.0"
  },
  "peerDependencies": {
    "stripe": "> 11"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.13",
    "@types/yesql": "^4.1.4",
    "@vitest/ui": "^4.0.9",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tx-stripe/stripe-sync-engine.git"
  },
  "homepage": "https://github.com/tx-stripe/stripe-sync-engine#readme",
  "bugs": {
    "url": "https://github.com/tx-stripe/stripe-sync-engine/issues"
  },
  "keywords": [
    "stripe",
    "postgres",
    "sync",
    "webhooks",
    "supabase",
    "billing",
    "database",
    "typescript"
  ],
  "author": "Supabase <https://supabase.com/>"
}
