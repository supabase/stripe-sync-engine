{
  "name": "@supabase/stripe-sync-cli",
  "version": "0.0.0",
  "description": "CLI to sync your stripe data to postgres",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lib": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "stripe-sync": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/lib.ts --format esm,cjs --dts --clean",
    "dev": "tsx src/index.ts",
    "lint": "eslint src",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "verify-webhook-reuse": "tsx scripts/verify-webhook-reuse.ts",
    "cleanup-webhooks": "tsx scripts/cleanup-webhooks.ts",
    "test": "vitest run",
    "test:integration": "./scripts/test-integration.sh",
    "test:integration:backfill": "./scripts/test-integration-backfill.sh",
    "test:integration:accounts": "./scripts/test-integration-account-management.sh",
    "test:integration:deploy": "./scripts/test-integration-deploy.sh"
  },
  "keywords": [
    "stripe",
    "webhook",
    "cli",
    "development",
    "sync"
  ],
  "dependencies": {
    "@ngrok/ngrok": "^1.4.1",
    "@supabase/stripe-sync-fastify": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "inquirer": "^12.3.0",
    "pg": "^8.13.1",
    "stripe": "^17.7.0",
    "stripe-experiment-sync": "workspace:*",
    "supabase-management-js": "^0.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.6",
    "tsx": "^4.19.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
