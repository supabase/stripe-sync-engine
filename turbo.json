{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "!.dist/cache/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "dependsOn": ["build"],

      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "lint": {},
    "lint:check": {},
    "format": {},
    "format:check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {}
  }
}
